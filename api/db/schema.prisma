model Thread {
  approved   Boolean   @default(true)
  body       String
  files      File[]    @relation()
  hash       String    @unique
  id         Int       @id @default(autoincrement())
  parent     Thread?   @relation("ParentThread", fields: [replyTo], references: [hash])
  replies    Thread[]  @relation("ParentThread")
  replyTo    String
  signature  String
  signedBy   PublicKey @relation(fields: [signedById], references: [keyId])
  signedById String
  timestamp  DateTime
}

model File {
  hash     String @unique
  id       Int    @id
  mimeType String
  thread   Thread @relation(fields: [threadId], references: [id])
  threadId Int
  url      String
}

model PublicKey {
  approved                Boolean     @default(false)
  armoredKey              String
  comment                 String
  email                   String
  finger                  String
  id                      Int         @id
  keyId                   String      @unique
  master                  Boolean
  name                    String
  revoked                 Boolean     @default(false)
  sponsor                 PublicKey   @relation("Sponsor", fields: [sponsorId], references: [keyId])
  sponsorArmoredSignature String
  sponsorId               String
  sponsoring              PublicKey[] @relation("Sponsor")
  threads                 Thread[]
}
