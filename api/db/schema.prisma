model Thread {
  approved   Boolean   @default(true)
  body       String
  files      File[]
  hash       String    @unique
  id         String    @id @map("_id")
  parent     Thread?   @relation(name: "ParentThread", fields: [replyTo], references: [hash], onDelete: NoAction, onUpdate: NoAction)
  replies    Thread[]  @relation(name: "ParentThread")
  replyTo    String?
  signature  String
  signedBy   PublicKey @relation(fields: [signedById], references: [keyId], onDelete: NoAction, onUpdate: NoAction)
  signedById String
  timestamp  DateTime
}

model File {
  hash     String
  id       String @id @map("_id")
  mimeType String
  thread   Thread @relation(fields: [threadId], references: [hash])
  threadId String
  url      String
}

model PublicKey {
  approved                Boolean     @default(false)
  armoredKey              String
  comment                 String
  email                   String
  finger                  String
  id                      String      @id @map("_id")
  keyId                   String      @unique
  master                  Boolean
  name                    String
  revoked                 Boolean     @default(false)
  sponsor                 PublicKey?  @relation("Sponsor", fields: [sponsorId], references: [keyId], onDelete: NoAction, onUpdate: NoAction)
  sponsorArmoredSignature String?
  sponsorId               String?
  sponsoring              PublicKey[] @relation("Sponsor")
  threads                 Thread[]
}
